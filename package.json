{
  "name": "fret",
  "version": "1.0.0",
  "description": "Fast change detection for any JavaScript type",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "scripts": {
    "build.noworker": "tsc && vite --config vite.noworker.config.ts build",
    "build.withworker": "tsc && vite --config vite.withworker.config.ts build",
    "build": "run-s build.noworker build.withworker",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jacob Runge",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
